{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["risk", "emotions", "plan", "tone"],
  "properties": {
    "risk": {
      "type": "object",
      "required": ["level"],
      "properties": {
        "level": { "enum": ["low", "med", "high"] },
        "signals": {
          "oneOf": [
            { "type": "array", "items": { "type": "string" } },
            { "type": "string" }
          ]
        }
      }
    },
    "emotions": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" } },
        {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "summary": { "type": "string" }
          }
        }
      ]
    },
    "distortions": { "type": "array", "items": { "type": "string" } },
    "plan": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["therapy"],
            "properties": {
              "therapy": { "enum": ["PCT", "CBT", "SFBT", "DBT"] },
              "goal": { "type": "string" },
              "weight": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          },
          { "enum": ["PCT", "CBT", "SFBT", "DBT"] }
        ]
      }
    },
    "tone": { "type": "string" },
    "reading_level": { "type": "string" },
    "template_slots": { "type": "object" },
    "retrieval_queries": { "type": "array", "items": { "type": "string" } },
    "final_prompt": { "type": "string" },
    "notes": { "type": "string" },
    "pct": { "type": "object" },
    "cbt": { "type": "object" },
    "sfbt": { "type": "object" },
    "dbt": { "type": "object" }
  },
  "additionalProperties": true
}
